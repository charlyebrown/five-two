<div class='event-form-div'>
{{#if this}}
  <input type="text" name="title" value="{{title}}">
  <input type="text" name="location" value="{{location}}">
  <date select name="start-date" value="{{start-date}}">
  <date select name="end-date" value="{{end-date}}">
  <span class="edit-event">Edit Your Event</span>
{{else}}
  <input type="text" name="title" value="{{title}}">
  <input type="text" name="location" value="{{location}}">
  <date select name="start-date" value="{{start-date}}">
  <date select name="end-date" value="{{end-date}}">
  <span class="edit-event">Edit Your Event</span>
{{/if}}
  <span class='cancel'>X</span>
</div>
